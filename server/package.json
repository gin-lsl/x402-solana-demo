  },
  "devDependencies": {
    "@types/koa": "^3.0.1",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-logger": "^3.1.5",
    "@types/koa__router": "^12.0.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.0"
  }
